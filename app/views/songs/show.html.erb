<div class="container">

<h4>Others who added <%= @song.artist %> - <%= @song.title %></h3>


<table class="table table-dark">
    <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Times Added</th>
        </tr>
    </thead>
    <tbody>
        <% @adders.each do |thing| %>
            <tr>
                <td>
                
                    <a href="/users/<%= thing.user_id %>"> <%= User.find(thing.user_id).first_name %> <%= User.find(thing.user_id).last_name %> </a>
                </td>
                <td><%= Add.where(user_id: thing.user_id).where(song_id: thing.song_id).count %></td>
            </tr>
        <% end %>
    </tbody>
    
</table>

</div>